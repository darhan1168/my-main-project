@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Core.Project

<h2>Delete Project</h2>

<h3>Are you sure you want to delete this project?</h3>
<div>
    <h4>Title</h4>
    <p>@Model.Title</p>
    <h4>Description</h4>
    <p>@Model.Description</p>
    <h4>Completion Rate</h4>
    <p>@Model.CompletionRate</p>
</div>

<form asp-action="Delete" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger button-with-margin">Delete</button>
    <a asp-action="Index" class="btn btn-secondary button-with-margin">Cancel</a>
</form>