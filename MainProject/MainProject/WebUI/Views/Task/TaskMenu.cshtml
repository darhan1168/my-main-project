@model TaskMenuViewModel

<h2>Welcome, @Model.User.Username!</h2>

<a href="@Url.Action("Create")" class="btn btn-primary">Create Task</a>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Deadline</th>
            <th>Priority</th>
            <th>Progress</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model.Tasks != null && Model.Tasks.Any())
    {
        foreach (var task in Model.Tasks)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.Deadline</td>
                <td>@task.TaskPriority</td>
                <td>@task.TaskProgress</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6">No tasks found.</td>
        </tr>
    }
    </tbody>
</table>
